<div class="container-sm">
  <div class="row">

    <div class="col-sm">
      <h1>List of articles</h1>
    </div>



    <table>
      <tr>
        <th class="col-sm-2">Title</th>
        <th class="col-sm-2">Description</th>
      </tr>
      <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to 'Show', article_path(article), :class => "btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_article_path(article), :class => "btn btn-secondary" %></td>
        <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-secondary" %></td>
      </tr>
      <% end %>
    </table>




  </div>
  <p><%= link_to 'Create new article', new_article_path, class: "btn btn-primary btn-lg" %></p>
</div>
