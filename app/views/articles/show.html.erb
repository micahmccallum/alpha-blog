<div class="container">
  <div class="row p-3">
    
    <%= link_to 'Edit article', edit_article_path(@article), class: "btn btn-outline-primary btn-sm m-2" %>
    
     
  
    
    <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger btn-sm m-2" %>
    
  </div>


  <div class="row p-3">
    <div class="m-2">
      Title:  <%= @article.title %>

    </div>
  </div>  
  <div class="row p-3">  
    <div class="m-2">
      Description:  <%= @article.description %>

    </div>

  


  </div>

</div>








