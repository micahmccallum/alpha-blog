<% if @article.errors.any? %>
  <h2>The followong errors prevented the article from being saved.</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @article do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit :class => "btn btn-secondary" %>
  </p>
  <p><%= link_to 'Back to list of articles', articles_path, :class => "btn btn-secondary"  %></p>
<% end %>
