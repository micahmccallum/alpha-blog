<% if @article.errors.any? %>
  <h2>The followong errors prevented the article from being saved.</h2>
  <ul>
    <% @article.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>
<div class="container">

    <%= form_for @article do |f| %>
      <div class="form-group row">
        <%= f.label :title, class: "col-md-2 col-form-label" %><br>
        <div class="col-md">
            <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">

        <%= f.label :description, class: "col-sm-2 col-form-label" %><br>
        <div class="col-sm">
          <%= f.text_area :description,  class: "form-control" %>
        </div>

      </div>
      <div class="form-group row">       
        <div class="col-sm-2 col-sm-offset-2">
          <%= f.submit class: "btn btn-primary btn-lg" %>
        </div>
        <div class="col-sm">
          <%= link_to 'Back to list of articles', articles_path, class: "btn btn-primary btn-lg"  %>
        </div>

      </div>



    <% end %>

</div>
