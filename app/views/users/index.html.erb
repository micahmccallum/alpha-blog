<div class="container p-3">
  <div class="row m-2">    
    <div class="col center">
      <h1>All users</h1>
    </div>
  </div>
</div>

<% @users.each do |user| %>
  <div class="container p-3">
    <ul class="center listing">
      <li>
        <%= link_to gravatar_for(user), user_path(user) %>      
      </li>
      <li>
        <%= link_to user.username, user_path(user) %>
      </li>
      <li>
        <small><%= pluralize(user.articles.count, "article") %></small>
      </li>
    </ul>
  </div>
<% end %>
