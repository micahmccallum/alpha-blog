<div class="container p-3">
  <div class="row m-2" >    
    <div class="col center">
      <h1>Log in to Alpha Blog</h1>
    </div>
  </div>
</div>

<%= form_for(:session, url: login_path) do |f| %>
  <div class="container p-3">    
    <div class="form-group row m-2">
      <%= f.label :email, class: "col-md-2 col-form-label" %>
        <div class="col-md">
          <%= f.email_field :email,  class: "form-control" %>
        </div>
    </div>
    <div class="form-group row m-2">
      <%= f.label :password, class: "col-md-2 col-form-label" %>
        <div class="col-md">
          <%= f.password_field :password,  class: "form-control", autocomplete: "off" %>
        </div>
    </div>
    <div class="form-group row m-2">       
      <div class="col-md-2 offset-md-2">
        <%= f.submit "Log in", class: "btn btn-outline-primary btn-sm" %>
      </div>
    </div>
  </div>  
<% end %>
