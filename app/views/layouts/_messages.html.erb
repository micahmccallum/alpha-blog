
<% flash.each do |name, msg| %>
  <div class="container">  
    <div class="row p-3">
      <div class="col-sm-12 m-2">
        <div class='alert alert-<%="#{name}"%>'>
          <a href="#" class="close" data-dismiss="alert">&times;</a>
          <% content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
            <ul>
              <li>
                <%= msg %>
              </li>
            </ul>
        </div>
      </div>     
    </div>
  </div>
<% end %>



